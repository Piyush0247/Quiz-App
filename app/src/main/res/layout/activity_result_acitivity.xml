<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/backgroung2"
    tools:context=".ResultAcitivity">
    <TextView
        android:id="@+id/Result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Result"
        android:textSize="30dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="15sp"



        />

    <ImageView
        android:id="@+id/imagetrophy"
        android:layout_width="341dp"
        android:layout_height="341dp"
        android:contentDescription="image"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:background="@drawable/ic_trophy" />
    <TextView
        android:id="@+id/heycongrate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hey, Congratualations!"
        android:textStyle="bold"
        android:textSize="30dp"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/namePart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Piyush"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your score is 9 out of 10"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="10sp"
        android:textColor="@color/grey"
        />
    <Button
        android:id="@+id/btnfinsh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FINISH"
        android:textColor="@color/white"
        android:textSize="19sp"
        android:layout_marginTop="20sp"
        android:textStyle="bold"
        />
</LinearLayout>